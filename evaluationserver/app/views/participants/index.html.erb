<h1><%= t(:participant, scope: :participants)%></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= link_to t(:show), participant %></td>
        <td><%= link_to t(:edit), edit_participant_path(participant) %></td>
        <td><%= link_to t(:destroy), participant, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(:new, scope: :participants), new_participant_path %>
