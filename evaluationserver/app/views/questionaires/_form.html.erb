<%= form_for @questionaire, :html => { :class => 'form' } do |f| %>
  <div class="form-group">
	 <%= f.label t(:name, scope: :questionaires) %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
	 <%= f.label t(:description, scope: :questionaires) %>
    <%= f.text_field :description, :class => 'form-control' %>
  </div>


  <div class="form-group">
	 <%= f.label t(:description, scope: :questionaires) %>
    <%= f.text_field :description, :class => 'form-control' %>
  </div>


  <div>
	 <%= f.label t(:questions, scope: :questionaires) %>
    <%= f.collection_select(:question_ids, Question.all, :id, :question_text, {}, {:class => 'multiselect', :multiple => true}) %>
  </div>

  
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t(:cancel),
                questionaires_path, :class => 'btn btn-default' %>
  </div>
<% end %>
