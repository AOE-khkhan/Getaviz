<%= form_for @experiment, :html => { :class => 'form' } do |f| %>
  <div class="form-group">
    <%= f.label t(:title, scope: :experiments) %>
	 <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label t(:description, scope: :experiments) %>
    <%= f.text_field :description, :class => 'form-control' %>
  </div>

  <div>
	 <%= f.label t(:steps, scope: :experiments) %>
    <%= f.collection_select(:step_ids, Step.all, :id, :title, {}, {:class => 'multiselect', :multiple => true}) %>
  </div>
  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t(:cancel), experiments_path, :class => 'btn btn-default' %>
  </div>
<% end %>
